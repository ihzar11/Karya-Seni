<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingRight="50dp"
    android:paddingLeft="50dp"
    android:paddingTop="100dp"
    android:background="@color/birumuda"
    xmlns:android="http://schemas.android.com/apk/res/android">
   <TextView
       android:id="@+id/identitasapk1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="50sp"
       android:layout_centerHorizontal="true"
       android:text="Superman"></TextView>
    <TextView
        android:id="@+id/email"
        android:layout_below="@id/identitasapk1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="30sp">
    </TextView>
    <EditText
        android:id="@+id/editemail"
        android:layout_marginTop="20dp"
        android:layout_below="@id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"></EditText>
    <TextView
        android:id="@+id/password"
        android:layout_marginTop="20dp"
        android:layout_below="@id/editemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="30sp">
    </TextView>
    <EditText
        android:id="@+id/editpassword"
        android:layout_marginTop="20dp"
        android:layout_below="@id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"></EditText>
    <Button
        android:id="@+id/btnlogin"
        android:layout_marginTop="20dp"
        android:layout_below="@id/editpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:background="@color/colorPrimary"></Button>
    <Button
        android:id="@+id/btnsignup"
        android:layout_marginTop="20dp"
        android:layout_below="@id/btnlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:background="@color/oren"></Button>
 <LinearLayout
     android:id="@+id/linear1"
     android:layout_marginTop="20dp"
     android:layout_below="@id/btnsignup"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Forgot Password ?"
        android:textSize="20sp"
        android:textColor="@color/hitam"></TextView>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginLeft="10dp"
      android:text="Click Me"
      android:textSize="20sp"
      android:clickable="true"
      android:textColor="@color/birutua"></TextView>
 </LinearLayout>
</RelativeLayout>